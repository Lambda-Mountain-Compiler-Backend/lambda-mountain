
type Maybe<x> = Some { content:x } | None;
zero Maybe<x> = None;

let .get-or(m: Maybe<x>, default: x): Maybe<x> = (
   match m {
      Some{content=content} => content;
      None{} => default;
   }
);

let .is-none(m: Maybe<x>): U64 = (
   match m {
      Some{} => false;
      None{} => true;
   }
);

let .is-some(m: Maybe<x>): U64 = (
   match m {
      Some{} => true;
      None{} => false;
   }
);
