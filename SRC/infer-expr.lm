               (if (head-string(var-name-if-var l)) (
                  (set ftrt (apply-or-cons-and-specialize(
                     (var-name-if-var l)
                     (typeof l)
                     (typeof r)
                     term
                  )))
               ) ())
               (set rt (.1 ftrt))
            ))
         ))
         (if (is( l-used Unused )) (
