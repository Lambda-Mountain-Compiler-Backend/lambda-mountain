            ( _ (
               (if (is( used Unused )) (set r-used Unused) ())
               (set tctx (infer-expr( tctx l Unscoped TAny l-used )))
               (if (is-arrow(typeof l)) (set r-used Call) ())
               (set tctx (infer-expr( tctx r Unscoped TAny r-used )))
               (let ftrt (apply-cons(
                  (var-name-if-var l)
                  (typeof l)
                  (typeof r)
                  term
