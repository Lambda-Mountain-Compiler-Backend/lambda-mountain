      ))
      ( (App( (Abs( (Var( lname _ )) ASTNil tlt )) rhs )) (
         (let prev-tt (typeof-var-raw( term tctx lname )))
         (if (non-zero prev-tt) (
            (if (&&( (not(is-arrow prev-tt)) (not(is-t( prev-tt 'GlobalVariable_s ))) )) (
