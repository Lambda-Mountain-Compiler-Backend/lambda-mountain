extract-uuids := λ(: loc SourceLocation)(: ctx Context)(: term AST). (: (tail(
   (let return ctx)
   (match term (
      ()
      ( (App( (Var 'uuid_s) (Var x) )) (tail(
         (let id (uuid()))
         (map-location( id loc ))
         (let lctx (CtxBind( (close ctx) x (Var id) )))
         (set return lctx)
      )))
      ( (App( l r )) (tail(
         (let lctx (extract-uuids( loc ctx l )))
         (let rctx (extract-uuids( loc lctx r )))
         (set return rctx)
      )))
      ( (Abs( l r tlt )) (tail(
         (let lctx (extract-uuids( loc ctx l )))
         (let rctx (extract-uuids( loc lctx r )))
         (set return rctx)
      )))
      ( ASTEOF () )
      ( ASTNil () )
      ( (AType _) () )
      ( (Var v) () )
      ( (Lit v) () )
      ( (Seq( lt rt )) (tail(
         (let lctx (extract-uuids( loc ctx lt )))
         (let rctx (extract-uuids( loc lctx rt )))
         (set return rctx)
      )))
      ( (Typedef( lt rt )) (tail(
         (let lctx (extract-uuids( loc ctx lt )))
         (let rctx (extract-uuids( loc lctx rt )))
         (set return rctx)
      )))
      ( (Glb( k t )) (tail(
         (let rctx (extract-uuids( loc ctx t )))
         (set return rctx)
      )))
      ( (Frg( k t tlt )) (tail(
         (let rctx (extract-uuids( loc ctx t )))
         (set return rctx)
      )))
   ))
   return
)) Context);
