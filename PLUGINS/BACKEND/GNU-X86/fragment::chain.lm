
fragment::chain-gnu := λ(: l Fragment)(: r Fragment). (: (
   (set l (.set-context( l (open(.context r)) )))
   (set l (.set-offset( l (.offset r) )))
   (set l (.set-type( l (.type r) )))
   (set l (.set( l 'expression_s (.get( r 'expression_s )) )))
   (set l (.set( l 'frame_s (SCons(
      (close(.get( l 'frame_s )))
      (close(.get( r 'frame_s )))
   )) )))
   (set l (.set( l 'del_s (SCons(
      (close(.get( l 'del_s )))
      (close(.get( r 'del_s )))
   )) )))
   (set l (.set( l 'unframe_s (SCons(
      (close(.get( l 'unframe_s )))
      (close(.get( r 'unframe_s )))
   )) )))
   (set l (.set( l 'program_s (SCons(
      (close(.get( l 'program_s )))
      (close(.get( r 'program_s )))
   )) )))
   l
) Fragment);

